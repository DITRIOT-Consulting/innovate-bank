def remote = [:]
remote.name = "node"
remote.host = "192.168.0.78"
remote.allowAnyHosts = true

node {
    withCredentials([usernamePassword(credentialsId: 'sshUserAcct', passwordVariable: 'password', usernameVariable: 'userName')]) {
        remote.user = administrator
        remote.password = Azerty123

        stage("Build") {
            sshCommand remote: remote, command: 'npm install'
        }
        stage("Test") {
            sshCommand remote: remote, command: 'npm test'
        }
        stage("Deploy") {
            sshCommand remote: remote, command: 'npm start'
        }
    }
}
